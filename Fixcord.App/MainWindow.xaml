<Window x:Class="Fixcord.App.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Fixcord.App"
		mc:Ignorable="d"
		Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="200" />
			<ColumnDefinition Width="4" />
			<ColumnDefinition Width="200" />
			<ColumnDefinition Width="4" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="12" />
		</Grid.RowDefinitions>

		<local:GuildSelector Grid.Column="0" Grid.Row="0" />
		<local:ChannelSelector Grid.Column="2" Grid.RowSpan="2" />
		<local:ChatControl Grid.Column="4" Grid.RowSpan="2" />

		<TextBox x:Name="tokenInput" Grid.Column="0" Grid.Row="1" KeyDown="tokenInput_KeyDown" />
	</Grid>
</Window>
